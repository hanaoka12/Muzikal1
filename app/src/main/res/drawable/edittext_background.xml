<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#333333" /> <!-- Dark gray background -->

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#555555" /> <!-- Slightly lighter gray border -->

    <!-- Corner radii -->
    <corners android:radius="8dp" /> <!-- Smooth rounded corners -->

    <!-- Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>